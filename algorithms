import time
import random
import logging
import matplotlib.pyplot as plt
import threading

# Configure logging
logging.basicConfig(filename='sorting_performance.log', level=logging.INFO, format='%(asctime)s - %(levelname)s - %(message)s')

# Seed for reproducibility
random.seed(42)

def generate_random_list(size, upper_bound=None):
    """Generate a list of random integers."""
    if upper_bound is None:
        upper_bound = size
    if size <= 0:
        raise ValueError("Size should be greater than 0")
    return [random.randint(0, upper_bound) for _ in range(size)]

def generate_reverse_sorted_list(size, upper_bound=None):
    """Generate a reverse sorted list."""
    arr = generate_random_list(size, size)
    return sorted(arr, reverse=True)

def generate_nearly_sorted_list(size, upper_bound=None):
    """Generate a nearly sorted list."""
    arr = sorted(generate_random_list(size, size))
    swap_count = max(1, size // 100) 
    for _ in range(swap_count):
        i, j = random.randint(0, size - 1), random.randint(0, size - 1)
        arr[i], arr[j] = arr[j], arr[i]
    return arr

def generate_high_duplicate_list(size, upper_bound=None):
    """Generate a list with high frequencies of duplicate elements."""
    if upper_bound is None:
        upper_bound = size // 10
    return [random.randint(0, upper_bound) for _ in range(size)]

def run_sorting_in_thread(func, arr):
    """Run a sorting function in a separate thread."""
    def target():
        func(arr)
    thread = threading.Thread(target=target)
    thread.start()
    return thread

def measure_runtime(func, arr):
    """Measure the runtime of a sorting function with threading."""
    start_time = time.perf_counter()
    thread = run_sorting_in_thread(func, arr)
    thread.join(timeout=300)  # Timeout after 300 seconds (5 minutes)
    if thread.is_alive():
        thread._stop()  # Force stop the thread if still alive
        return float('inf')  # Return infinity if timed out
    else:
        elapsed_time = (time.perf_counter() - start_time) * 1000
        return elapsed_time

def run_sorting_algorithms(arr_sizes):
    sorting_algorithms = [bubble_sort, selection_sort, insertion_sort, shell_sort, merge_sort, quick_sort, heap_sort, counting_sort, radix_sort, bucket_sort, timsort]
    dataset_types = [generate_random_list, generate_reverse_sorted_list, generate_nearly_sorted_list, generate_high_duplicate_list]
    dataset_names = ["Random", "Reverse", "Nearly Sorted", "High Duplicates"]
    times = {alg.__name__: {name: [] for name in dataset_names} for alg in sorting_algorithms}
    sizes = []

    for size in arr_sizes:
        sizes.append(size)
        for data_func, data_name in zip(dataset_types, dataset_names):
            arr = data_func(size)
            print(f"\nArray size: {size}, Data type: {data_name}")
            for sort_func in sorting_algorithms:
                runtime = measure_runtime(sort_func, arr)
                times[sort_func.__name__][data_name].append(runtime)
                print(f"{sort_func.__name__} took {runtime:.2f} ms")

    plt.figure(figsize=(10, 8))
    for alg_name, datasets in times.items():
        for data_name, runtimes in datasets.items():
            plt.plot(sizes, [r if r != float('inf') else None for r in runtimes], label=f"{alg_name} ({data_name})")
    plt.xlabel('Array Size')
    plt.ylabel('Time (ms)')
    plt.title('Sorting Algorithm Performance by Data Type')
    plt.legend()
    plt.grid(True)
    plt.yscale('log')
    plt.show()

def bubble_sort(arr):
    n = len(arr)
    for i in range(n):
        for j in range(0, n-i-1):
            if arr[j] > arr[j+1]:
                arr[j], arr[j+1] = arr[j+1], arr[j]

def selection_sort(arr):
    for i in range(len(arr)):
        min_idx = i
        for j in range(i+1, len(arr)):
            if arr[min_idx] > arr[j]:
                min_idx = j
        arr[i], arr[min_idx] = arr[min_idx], arr[i]

def insertion_sort(arr):
    for i in range(1, len(arr)):
        key = arr[i]
        j = i - 1
        while j >= 0 and key < arr[j]:
            arr[j + 1] = arr[j]
            j -= 1
        arr[j + 1] = key

def shell_sort(arr):
    n = len(arr)
    gap = n // 2
    while gap > 0:
        for i in range(gap, n):
            temp = arr[i]
            j = i
            while j >= gap and arr[j - gap] > temp:
                arr[j] = arr[j - gap]
                j -= gap
            arr[j] = temp
        gap //= 2

def merge_sort(arr):
    if len(arr) > 1:
        mid = len(arr) // 2
        L = arr[:mid]
        R = arr[mid:]

        merge_sort(L)
        merge_sort(R)

        i = j = k = 0

        while i < len(L) and j < len(R):
            if L[i] < R[j]:
                arr[k] = L[i]
                i += 1
            else:
                arr[k] = R[j]
                j += 1
            k += 1

        while i < len(L):
            arr[k] = L[i]
            i += 1
            k += 1

        while j < len(R):
            arr[k] = R[j]
            j += 1
            k += 1

def quick_sort(arr):
    def quick_sort_recursive(low, high):
        if low < high:
            pi = partition(low, high)
            quick_sort_recursive(low, pi)
            quick_sort_recursive(pi + 1, high)

    def partition(low, high):
        pivot = arr[(low + high) // 2]
        left = low - 1
        right = high + 1
        while True:
            left += 1
            while arr[left] < pivot:
                left += 1
            right -= 1
            while arr[right] > pivot:
                right -= 1
            if left >= right:
                return right
            arr[left], arr[right] = arr[right], arr[left]

    quick_sort_recursive(0, len(arr) - 1)

def heap_sort(arr):
    def heapify(n, i):
        largest = i
        l = 2 * i + 1
        r = 2 * i + 2
        if l < n and arr[l] > arr[i]:
            largest = l
        if r < n and arr[r] > arr[largest]:
            largest = r
        if largest != i:
            arr[i], arr[largest] = arr[largest], arr[i]
            heapify(n, largest)

    n = len(arr)
    for i in range(n // 2 - 1, -1, -1):
        heapify(n, i)
    for i in range(n-1, 0, -1):
        arr[i], arr[0] = arr[0], arr[i]
        heapify(i, 0)

def counting_sort(arr):
    max_val = max(arr)
    m = max_val + 1
    count = [0] * m
    for a in arr:
        count[a] += 1
    i = 0
    for a in range(m):
        for c in range(count[a]):
            arr[i] = a
            i += 1

def radix_sort(arr):
    RADIX = 10
    placement = 1
    max_digit = max(arr)
    while placement <= max_digit:
        buckets = [list() for _ in range(RADIX)]
        for i in arr:
            tmp = int((i / placement) % RADIX)
            buckets[tmp].append(i)
        a = 0
        for b in range(RADIX):
            buck = buckets[b]
            for i in buck:
                arr[a] = i
                a += 1
        placement *= RADIX

def bucket_sort(arr):
    max_elem = max(arr)
    bucket_count = len(arr) // 10 or 10
    buckets = [[] for _ in range(bucket_count)]
    for number in arr:
        index = min(number * bucket_count // (max_elem + 1), bucket_count - 1)
        buckets[index].append(number)
    k = 0
    for bucket in buckets:
        for number in sorted(bucket):
            arr[k] = number
            k += 1

def timsort(arr):
    arr.sort()

def main():
    sizes = [100, 1000, 10000, 100000]
    run_sorting_algorithms(sizes)

if __name__ == "__main__":
    main()
